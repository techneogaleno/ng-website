<script>
import Splide from '@splidejs/splide';

var splide = new Splide( '#quotes', {
  type   : 'loop',
  perPage: 3,
  perMove: 1,
  focus  : 'center',
  autoplay: true,
  interval: 5000,
});

splide.mount();
</script>

