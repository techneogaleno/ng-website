<script>
let animation = false
const isInViewport = ()=> {
      const elem = document.querySelector('#contact.wp-contact')
      if(elem){

        const distance = elem.getBoundingClientRect()
  
        const isVisible =
          distance.top <
            (window.innerHeight || document.documentElement.clientHeight) &&
          distance.bottom > 0
  
        if (isVisible && !animation) {
          animation = true
          document
            .querySelectorAll('.items.grid.grid-contact .col-span-1')
            .forEach( e => {
              e.classList.add('animate')
            })
        }
        if (!isVisible && animation) {
          animation = false
          document
            .querySelectorAll('.items.grid.grid-contact .col-span-1')
            .forEach( e => {
              e.classList.remove('animate')
            })
        }
      }
      return animation
    }
setInterval(isInViewport, 1000)
</script>

